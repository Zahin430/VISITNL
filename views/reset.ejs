<div class="form-gap" style="padding-top: 70px; "></div>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-body" > 
                <div class="text-center">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <h2 class="text-center">Reset your Password Now</h2>
                  <p>You can reset your password here.</p>
                  <div class="panel-body">
                    <form id="register-form" role="form" autocomplete="off" class="form" action="/reset/<%=token %>" method="POST">   
                      <div class="form-group">
                        <div class="input-group">
														<span class="input-group-addon"><i class="fas fa-key"></i></span>
														<input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
                        </div>
											</div>
											<div class="form-group">
													<div class="input-group">
															<span class="input-group-addon"><i class="fas fa-key"></i></span>
															<input type="password" name="confirm" value="" placeholder="Confirm Password" autofocus="autofocus" class="form-control"/>
													</div>
												</div>
												
                      <div class="form-group">
                        <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Reset Password" type="submit">
                      </div>
                      
                      <input type="hidden" class="hide" name="token" id="token" value=""> 
                    </form>
    
                  </div>
                </div>
              </div>
            </div>
          </div>
	</div>
</div>
<% include ./partials/footer %>