<% include ./partials/header %>
<h2 style="padding: 12px;">Reset Your Password</h2>
<div class="row">
    <div class="col-md-9">
        <form action="/forgot" method="">
            <h3>Forgot Password</h3>
            <h4>Enter the email you have used to register your VISITNL account</h4>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" autofocus class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" name="btn btn-primary" value="Reset Password">
            </div>
        </form>
    </div>
</div>
<% include ./partials/footer %>
